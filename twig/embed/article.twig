<table id="content-article-{{ index }}" class="content-article" cellpadding="0" cellspacing="0" border="0" width="100%">
  <tr>
    <td class="container article" valign="top">

      <table class="content-container" border="0" align="center" cellpadding="0" cellspacing="0" width="100%">

        <tr>
          <td align="center">
            <a class="article__link-image" href="{% block link %}{% endblock %}"><img class="article__image" src="{% block image %}{% endblock %}" width="600" height="300" alt="{% block title %}{% endblock %}" title="{% block title %}{% endblock %}" /></a>
          </td>
        </tr>

        <tr>
          <td class="article__content">

            <table border="0" align="center" cellpadding="0" cellspacing="0" width="100%">

              <tr>
                <td>
                  <div class="article__title">{% block title %}{% endblock %}</div>
                </td>
              </tr>

              <tr>
                <td>{{ macro.spacer('15') }}</td>
              </tr>

              <tr>
                <td>
                  <div class="article__text">{% block text %}{% endblock %}</div>
                </td>
              </tr>

              <tr>
                <td>{{ macro.spacer('20') }}</td>
              </tr>

              <tr>
                <td>
                  {% if brand == "pallmall" %}
                  <a href="{% block link %}{% endblock %}"><img class="article__btn" src="{{ btnArticle }}" width="32" height="26" alt="" title="" /></a>
                  {% else %}
                  <a href="{% block link %}{% endblock %}"><img class="article__btn" src="{{ btnArticle }}" width="26" height="26" alt="" title="" /></a>
                  {% endif %}
                </td>
              </tr>

            </table>

          </td>
        </tr>

      </table>

      {% block bottom %}{% endblock %}

    </td>
  </tr>
</table>